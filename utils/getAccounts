const { ethers } = require("hardhat")

async function getAccounts() {
    const [deployer, ...otherAccounts] = await ethers.getSigners()

    console.log("Deployer address:", deployer.address)
    console.log("Deployer private key:", deployer.privateKey)

    otherAccounts.forEach((account, index) => {
        console.log(`Account ${index + 1} address:`, account.address)
        console.log(`Account ${index + 1} private key:`, account.privateKey)
    })
}

getAccounts().catch((error) => {
    console.error(error)
    process.exit(1)
})
